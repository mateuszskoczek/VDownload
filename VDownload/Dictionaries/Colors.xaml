<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="GreyText" Color="#626262"/>
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="ViewBackgroundColor" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="PanelBackgroundColor" Color="#FCFCFC"/>
            <SolidColorBrush x:Key="OptionBarBackgroundColor" Color="#efefef"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="ViewBackgroundColor" Color="#242424"/>
            <SolidColorBrush x:Key="PanelBackgroundColor" Color="#2F2F2F"/>
            <SolidColorBrush x:Key="OptionBarBackgroundColor" Color="#1B1B1B"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
